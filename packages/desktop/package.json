{
  "name": "@devon/desktop",
  "version": "0.0.1",
  "private": false,
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn clean && yarn compile && cd ../web && yarn build && cd ../desktop",
    "build:electron": "NODE_ENV=production electron-builder -mw",
    "compile": "tsc -b",
    "clean": "rm -rf build && rm -rf dist",
    "format": "prettier --write '{.,src/**}/*.{js,jsx,ts,tsx}'",
    "lint": "tslint -p .",
    "predeploy": "yarn run build",
    "start": "NODE_ENV=development nodemon --watch dist/*.js --watch assets --exec \"electron .\"",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "build": {
    "appId": "com.devon.app",
    "productName": "DevOn",
    "extends": null,
    "directories": {
      "app": "../../",
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "packages/desktop/dist/index.js"
    },
    "files": [
      "packages/core/dist/index.js",
      "packages/core/package.json",
      "packages/desktop/assets/**",
      "packages/desktop/dist/**",
      "packages/web/dist/**",
      "packages/web/public/**"
    ],
    "mac": {
      "icon": "icons/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "4.1.4",
    "electron-builder": "20.39.0",
    "nodemon": "1.18.11",
    "tslint": "5.15.0",
    "typescript": "3.4.2",
    "wait-on": "3.2.0"
  }
}
